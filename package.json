{
  "name": "next-ts-codegen",
  "version": "0.1.0",
  "description": "Generate TypeScript types and React hooks from various data sources",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "next-ts-codegen": "./bin/next-ts-codegen.js"
  },
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "node dist/index.js generate",
    "generate:source": "node dist/index.js generate:source"
  },
  "keywords": [
    "typescript",
    "react",
    "nextjs",
    "codegen",
    "api",
    "hooks"
  ],
  "author": "manitriniaina",
  "license": "MIT",

  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "inquirer": "^12.6.1",
    "json-schema-to-typescript": "^15.0.4",
    "swr": "^2.3.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/handlebars": "^4.0.40",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.11.24",
    "tsx": "^4.9.0",
    "typescript": "^5.3.3"
  }
}
