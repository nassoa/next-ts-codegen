{
  "name": "next-ts-codegen",
  "version": "0.1.0",
  "description": "Generate TypeScript types and React hooks from various data sources",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "next-ts-codegen": "./bin/next-ts-codegen.js"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "generate": "node dist/index.js generate",
    "generate:source": "node dist/index.js generate:source",
    "check": "npm run lint && npm run typecheck && npm run build && npm test"
  },
  "keywords": [
    "typescript",
    "react",
    "nextjs",
    "codegen",
    "api",
    "hooks"
  ],
  "author": "manitriniaina",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "inquirer": "^12.6.1",
    "json-schema-to-typescript": "^15.0.4",
    "swr": "^2.3.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.4",
    "@types/handlebars": "^4.0.40",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.47",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "tsx": "^4.9.0",
    "typescript": "^5.3.3"
  }
}
